#main
	padding 0
	background-color: #F4F4F4
	background-image url(../img/backs/main.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	.col-md-6
		position relative
.pre
	font-size: 14px
	font-family: G
	margin-bottom: 10px
.main-title
	font-size: 60px
	font-family: Mk
	font-weight: 900
	text-transform uppercase
	line-height: 1.1
	span
		color #ee1d1d
		display inline-block
.main-subtitle
	font-size: 18px
	font-family: Md
	font-weight: bold
	margin 40px 0
	small
		display block
		font-size: 16px
		font-family: M
		font-weight: normal
.main-info
	position absolute
	padding 30px 30px 30px 50px
	display inline-block
	border-radius: 7px;
	box-shadow: 0px 0px 15.66px 2.34px rgba(45, 45, 47, 0.11);
	font-size: 14px
	background-color #fff
	bottom 50px
	right: -300px
	z-index 20
	&:before
		content: ''
		display block
		position absolute
		width 50px
		height 50px
		left -25px
		top calc(50% - 25px)
		border-radius: 100px
		background-color: #8d0b6b
		background-image url(../img/icons/calendar.png)
		background-repeat no-repeat
		background-position: center
	span
		display block
.button-main
	margin 0
.main-flytext
	position absolute
	top -120px
	right 0
	font-size: 140px
	font-family: Mk
	font-weight: 900
	opacity .2
	color #000
	text-transform uppercase
.main-img
	position relative
	padding-top: 65%
	img
		position absolute
		top 0
		right 0
.main-speakers
	position relative
	bottom: -55px
.main-speakers-row
	text-align center
	padding-top: 70px
.main-speaker
	display inline-block
	width 206px
	border-radius: 7px;
	box-shadow: 0px 0px 15.66px 2.34px rgba(45, 45, 47, 0.11);
	height: 180px;
	background-color #fff
	position relative
	padding: 130px 10px 0
	margin 0 10px
	&:first-child
		margin-left: 0
	&_last-child
		margin-right: 0
	&-img
		position absolute
		left 0
		right 0
		margin 0 auto
		top -40px
		width 150px
	&-text
		font-size: 14px