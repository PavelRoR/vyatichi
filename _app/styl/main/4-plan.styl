#plan
	padding 40px 0 190px
	.container
		position relative
.day
	padding 40px 30px
	position relative
	box-shadow: 0px 0px 15.66px 2.34px rgba(45, 45, 47, 0.11);
	width 100%
	max-width 370px
	margin 0 auto 25px
	background-color #fff
	border-radius: 7px
	height 271px
	display flex
	overflow hidden
	background-color: #FBFFFF
	justify-content: center
	align-items: center
	&-container
		position relative
		z-index: 10
	&-img
		position absolute
		z-index 1
		&-1
			top -100px
			right -100px
		&-2
			top -100px
			right -120px
		&-3
			bottom:  -120px
			right -140px
		&-4
			top -60px
			right -100px
			transform: rotate(-45deg)
			width 200px
		&-5
			top -90px
			right -110px
		&-6
			bottom:  -120px
			right -150px
			transform: rotate(120deg)
	&-title
		font-family: Md
		font-weight: bold
		text-transform uppercase
	&-list
		li
			list-style: none
			font-size: 14px
.cost
	font-size: 26px
	text-align center
	font-family: Md
	font-weight: bold
	margin 40px 0 30px
	text-transform uppercase
	line-height: 1.3
	span
		display block
		font-size: 70px
		font-family: Mk
		font-weight: 900
		color #8d0b6b
	&-prepayment
		margin-top: 60px
.about-wrapper
	width 100%
	max-width 1140px
	background-color: #8d0b6b
	border-radius: 7px
	border1px solid #c5c3c3
	position absolute
	left 0
	right 0
	margin 0 auto
	bottom: -480px
	padding 8px
.about
	border-radius: 7px
	border 1px solid #fff
	padding 20px 50px
	// position relative
	&-img
		position relative
		padding-bottom: 60%
		img
			position absolute
			bottom: -68px
			right 140px
			z-index 0
	&-info
		position: absolute
		padding 20px 30px 20px 30px
		left 0
		bottom: -20px
		z-index 20
		width 100%
		max-width 320px
		&:before
			content: ''
			display block
			border-radius: 7px
			background-color #fff
			width 100%
			height 100%
			position absolute
			top: 0
			left 0
			transform: skewX(-20deg)
		p
			position relative
			z-index 20
			font-size: 14px
	&-title
		font-size: 30px
		font-family: Md
		font-weight: bold
		margin-bottom: 30px
		color #fff
	&-list
		li
			list-style none
			color #fff
			margin-bottom: 5px