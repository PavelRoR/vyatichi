#lets
	padding 380px 0 90px
	background-color: #F4F4F4
	background-image url(../img/backs/main.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
.let-item
	border-radius: 7px
	background-color #fff
	padding 40px
	position relative
	box-shadow: 0px 0px 15.66px 2.34px rgba(45, 45, 47, 0.11);
	width 100%
	max-width 360px
	margin 0 auto 25px
	&:before
		content: '+'
		display block
		position absolute
		top 25px
		left -25px
		width 50px
		height 50px
		font-size: 25px
		font-family: Md
		font-weight: bold
		line-height: 50px
		color #fff
		background-color: #21B6E0
		border-radius: 100px
		text-align center
	&-1
	&-2
		text-align: right
		&:before
			left auto
			right -25px
	&-6
		text-align center
		max-width 300px
		margin: -190px auto 70px
		&:before
			top -25px
			left 0
			right 0
			margin 0 auto
	&-2
		left -10px
	&-3
	&-5
		left -20px
	&-4
		left 20px
.lets-img
	position relative
	width 400px
	left -20px
	img
		width 100%