*
	margin 0
	padding 0
	outline none
body
	font-size: 16px 
	font-family: M
	color #000
	background-color #fff
	line-height: 1.5
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 7px
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
		box-shadow: 0px 0px 15.66px 2.34px rgba(45, 45, 47, 0.11);
.button
	display block
	text-align center
	margin 0 auto
	text-decoration none
	color: #fff
	width: 100%
	position relative
	z-index 20
	border-radius: 5px;
	box-shadow: inset 0px 1px 6px 0px rgba(247, 151, 151, 1), 0px 4px  27px 0 rgba(247, 151, 151, 1);
	padding 25px 20px
	background-color: #ee1a1a
	background-image linear-gradient(to top, #ee1a1a, #f77272)
	transition: all .3s ease
	&:focus
		text-decoration none
		color #fff
	&:hover
		text-decoration none
		color #fff
	&-wrapper
		position relative
		width 100%
		max-width 290px
		margin: 0 auto
		&:before
			content ''
			display block
			position absolute
			z-index 0
			width 95%
			height 100%
			left 0
			right 0
			margin 0 auto
			bottom: -4px
			border-radius: 15px;
			// box-shadow: 0px 4px  27px 0 rgba(247, 151, 151, 1);
			background-color: #c11516
			transition: all .3s ease
		&:hover
			.button
				box-shadow: inset 0px 1px 6px 0px rgba(247, 151, 151, 1), 0px 4px  14px 0 rgba(247, 151, 151, 1);
				background-image linear-gradient(to bottom, #ee1a1a, #f77272)
				transform: translateY(4px)
.general-title
	text-align center
	font-size: 30px
	font-family: Md
	font-weight: bold
	margin-bottom: 35px
.general-text
	margin-bottom: 20px
	&:last-child
		margin-bottom: 0